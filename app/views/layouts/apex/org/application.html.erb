  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>
  <%= javascript_include_tag "application", "data-turbo-track": "reload", type: "module" %>
  <link rel="icon" href="https://perm.umaxica.org/jit/favicon.ico" sizes="32x32">
</head>
<body class="px-4">
  <%= render "concern/flash_messages" %>
<header>
  <h1 class="container mx-auto mt-28 px-5 flex">
    <a href="http://<%= ENV['EDGE_STAFF_URL'] %>:4444/"><%= ENV.fetch('NAME') %> (apex, org)</a></h1>
</header>

<hr>

<main class="container mx-auto mt-28 px-5 block">
  <%= yield %>
</main>

<hr>

<footer>

  <ul>
    <li><a href="http://<%= ENV['EDGE_STAFF_URL'] %>">Home</a></li>
    <li><%= link_to 'Cookie', edit_apex_org_preference_cookie_path %></li>
    <li><%= link_to 'Support', help_org_root_url %></li>
    <li><%= link_to 'NewsRoom', news_org_root_url %></li>
    <li><%= link_to 'Documents', docs_org_root_url %></li>
    <li><%= link_to 'Cookie', edit_apex_org_preference_cookie_path %></li>
  </ul>

  <%= render "concern/copyright" %>
</footer>

</body>
</html>

<% scope = local_assigns.fetch(:scope, :org).to_s %>
<% content_for :page_title, t("top.#{scope}.preference.locale.edit.title") %>

<div class="max-w-2xl mx-auto py-8 px-4">
  <header class="mb-8">
    <h1 class="text-3xl font-bold text-gray-900 dark:text-gray-100 mb-2">
      <%= t("top.#{scope}.preference.locale.edit.title") %>
    </h1>
    <p class="text-gray-600 dark:text-gray-400">
      <%= t("top.#{scope}.preference.locale.edit.description") %>
    </p>
  </header>

  <%= form_with url: public_send("top_#{scope}_preference_locale_path"), method: :patch, class: "space-y-6" do |f| %>
    <div class="bg-white dark:bg-gray-800 rounded-lg shadow p-6">
      <h2 class="text-xl font-semibold text-gray-900 dark:text-gray-100 mb-4">
        <%= t("top.#{scope}.preference.locale.edit.language_section") %>
      </h2>

    </div>

    <div class="bg-white dark:bg-gray-800 rounded-lg shadow p-6">
      <h2 class="text-xl font-semibold text-gray-900 dark:text-gray-100 mb-4">
        <%= t("top.#{scope}.preference.locale.edit.timezone_section") %>
      </h2>

    </div>

    <div class="flex gap-3">
      <%= f.submit t("top.#{scope}.preference.locale.edit.submit"),
                   class: "px-6 py-2 bg-blue-600 hover:bg-blue-700 text-white font-medium rounded-md transition-colors duration-200 cursor-pointer" %>
    </div>
  <% end %>

  <div class="mt-6">
    <%= link_to t("top.#{scope}.preferences.back_to_settings"),
                public_send("top_#{scope}_preference_path"),
                class: "inline-block px-4 py-2 bg-gray-200 hover:bg-gray-300 text-gray-800 font-medium rounded-md transition-colors duration-200" %>
  </div>
</div>

<div class="container mx-auto px-4 py-8">
  <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
    <div class="lg:col-span-1">
      <div class="mb-6">
        <h1 class="text-2xl font-bold mb-4">News</h1>

        <div class="text-xs text-gray-600 mb-4">
          <%= @posts.size %> posts
        </div>
      </div>

      <% if @posts.any? %>
        <div class="space-y-2">
          <% @posts.each do |post| %>
            <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-4 hover:shadow-md transition-shadow">
              <%= link_to news_app_post_path(post[:id]),
                          data: { turbo_frame: "post_detail" },
                          class: "block" do %>
                <h3 class="font-semibold text-sm mb-1 text-gray-900">
                  <%= post[:title] %>
                </h3>
                <% timestamp = post[:updated_at] || post[:published_at] %>
                <% if timestamp.present? %>
                  <div class="text-xs text-gray-500">
                    <%= l(timestamp, format: :long) %>
                  </div>
                <% end %>
              <% end %>
            </div>
          <% end %>
        </div>
      <% else %>
        <div class="bg-gray-50 rounded-lg p-8 text-center">
          <p class="text-gray-600 text-sm">No posts found</p>
        </div>
      <% end %>
    </div>

    <div class="lg:col-span-2">
      <%= turbo_frame_tag "post_detail" do %>
        <div class="bg-gray-50 rounded-lg p-12 text-center">
          <svg class="mx-auto h-12 w-12 text-gray-400 mb-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
          </svg>
          <h3 class="text-lg font-medium text-gray-900 mb-2">Select a post</h3>
          <p class="text-gray-600">
            Click on a post from the list to view its details
          </p>
        </div>
      <% end %>
    </div>
  </div>
</div>

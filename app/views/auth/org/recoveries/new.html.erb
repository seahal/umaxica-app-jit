<h1 class="font-bold text-4xl">Account recovery</h1>
<p class="mt-2 text-sm text-slate-600">Use your recovery code to sign in.</p>

<%= form_with model: @staff_recover_code, url: auth_org_authentication_recovery_path, data: { turbo: false } do |f| %>
  <% if @staff_recover_code.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-md mt-3">
      <h2><%= pluralize(@staff_recover_code.errors.count, "error") %> prohibited this sample from being saved:</h2>

      <ul class="list-disc ml-6">
        <% @staff_recover_code.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%= render "concern/cloudflare_turnstile" %>

  <div>
    <%= f.label :account_identifiable_information %>
    <%= f.text_field :account_identifiable_information %>
  </div>

  <div>
    <%= f.label :recovery_code %>
    <%= f.password_field :recovery_code %>
  </div>

  <div><%= f.submit %></div>
<% end %>

<ul>
  <li><%= link_to "Back", new_auth_org_authentication_path %></li>
</ul>

<% content_for :page_title, t("auth.org.registration.new.page_title") %>

<section class="space-y-12" data-testid="registration-page">
  <header class="space-y-4">
    <h1 class="text-3xl font-bold text-slate-900 md:text-4xl"><%= t("auth.org.registration.new.page_title") %></h1>
    <p class="max-w-2xl text-base text-slate-600"><%= t("auth.org.registration.new.page_description") %></p>
  </header>

  <section class="space-y-4" data-testid="registration-links">
    <p class="text-sm text-slate-700">
      <%= t("auth.org.registration.new.links.sign_in_text") %>
      <%= link_to t("auth.org.registration.new.links.sign_in_link"), new_auth_org_authentication_path, class: "font-medium text-slate-900 underline hover:text-slate-700" %>
    </p>
  </section>
</section>

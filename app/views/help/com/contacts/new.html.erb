<h1><%= t('controller.help.app.contacts.new.page_title') %></h1>

<%= form_with model: @com_contact, url: help_com_contacts_path do |form| %>
  <% if @com_contact.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-md mt-3">
      <h2><%= pluralize(@com_contact.errors.count, "error") %> prohibited this contact from being saved:</h2>

      <ul class="list-disc ml-6">
        <% @com_contact.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.checkbox :confirm_policy %>
    <%= form.label :confirm_policy, t('controller.help.app.contacts.new.confirm_policy') %>
  </div>

  <div>
    <%= form.label :contact_category_title %>
    <%= form.collection_select :contact_category_title,
                                @contact_categories,
                                :title,
                                :title,
                                { include_blank: true } %>
  </div>

  <div>
    <%= form.label :email_address %>
    <%= form.email_field :email_address %>
  </div>

  <div>
    <%= form.label :telephone_number %>
    <%= form.text_field :telephone_number %>
  </div>

  <%= render "cloudflare_turnstile" %>

  <%= form.submit %>
<% end %>

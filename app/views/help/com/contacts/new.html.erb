<h1><%= title t('controller.help.com.contacts.new.page_title') %></h1>

<%= form_with model: @contact, url: help_com_contacts_path do |form| %>
  <% if @contact.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-md mt-3">
      <h2><%= pluralize(@contact.errors.count, "error") %> prohibited this contact from being saved:</h2>

      <ul class="list-disc ml-6">
        <% @contact.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.checkbox :confirm_policy %>
    <%= form.label :confirm_policy, t('controller.help.com.contacts.new.confirm_policy') %>
  </div>

  <div>
    <%= form.label :contact_category_title, t('controller.help.com.contacts.new.contact_category_title') %>
    <%= form.collection_select :contact_category_title,
                               @contact_categories,
                               :title,
                               :title,
                               { include_blank: true } %>
  </div>

  <%= form.fields_for :email_address, @contact.com_contact_emails.build do |email_form| %>
    <div>
      <%= email_form.label :email_address, t('controller.help.com.contacts.new.email_address') %>
      <%= email_form.email_field :email_address %>
    </div>
  <% end %>

  <%= form.fields_for :telephone_number, @contact.com_contact_telephones.build do |telephone_form| %>
    <div>
      <%= telephone_form.label :telephone_number, t('controller.help.com.contacts.new.telephone_number') %>
      <%= telephone_form.text_field :telephone_number %>
    </div>
  <% end %>

  <%= render "concern/cloudflare_turnstile" %>

  <%= form.submit %>
  <div>
    <%= link_to t('controller.help.com.contacts.new.cancel'), help_com_root_path %>
  </div>
<% end %>

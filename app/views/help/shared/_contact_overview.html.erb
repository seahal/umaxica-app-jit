<div class="rounded-md border border-slate-200 bg-white p-4 shadow-sm">
  <% rows = {
    "Contact ID" => contact.public_id,
    "Category" => contact.try(:contact_category_title),
    "Status" => contact.try(:contact_status_title),
    "Email" => contact.try(:email_address),
    "Telephone" => contact.try(:telephone_number),
    "Created at" => contact.created_at&.strftime("%Y-%m-%d %H:%M"),
    "Updated at" => contact.updated_at&.strftime("%Y-%m-%d %H:%M")
  } %>

  <dl class="divide-y divide-slate-100 text-sm">
    <% rows.each do |label, value| %>
      <div class="grid grid-cols-3 gap-4 py-3">
        <dt class="text-sm font-medium text-slate-500"><%= label %></dt>
        <dd class="col-span-2 text-sm text-slate-900"><%= value.presence || "--" %></dd>
      </div>
    <% end %>
  </dl>
</div>

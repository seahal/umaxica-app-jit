<%= form_with(model: document, url: document.persisted? ? docs_com_cms_document_path(document) : docs_com_cms_documents_path, local: false) do |form| %>
  <% if document.errors.any? %>
    <div class="bg-red-50 border-l-4 border-red-500 p-4 mb-4">
      <div class="flex">
        <div class="flex-shrink-0">
          <svg class="h-5 w-5 text-red-400" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
          </svg>
        </div>
        <div class="ml-3">
          <h3 class="text-sm font-medium text-red-800">
            <%= pluralize(document.errors.count, "error") %> prohibited this document from being saved:
          </h3>
          <div class="mt-2 text-sm text-red-700">
            <ul class="list-disc list-inside">
              <% document.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        </div>
      </div>
    </div>
  <% end %>

  <div class="space-y-4">
    <div>
      <%= form.label :permalink, class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= form.text_field :permalink,
          class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500",
          placeholder: "example_document",
          pattern: "[A-Za-z0-9_]{1,200}" %>
      <p class="mt-1 text-sm text-gray-500">Only alphanumeric characters and underscores allowed (max 200 chars)</p>
    </div>

    <div>
      <%= form.label :response_mode, class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= form.select :response_mode,
          options_for_select([["HTML", "html"], ["Text", "text"], ["PDF", "pdf"], ["Redirect", "redirect"]], document.response_mode),
          {},
          class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500" %>
    </div>

    <div id="redirect-url-field" style="<%= 'display: none;' unless document.response_mode == 'redirect' %>">
      <%= form.label :redirect_url, class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= form.url_field :redirect_url,
          class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500",
          placeholder: "https://example.com" %>
    </div>

    <div class="grid grid-cols-2 gap-4">
      <div>
        <%= form.label :published_at, class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= form.datetime_local_field :published_at,
            class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500" %>
      </div>

      <div>
        <%= form.label :expires_at, class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= form.datetime_local_field :expires_at,
            class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500" %>
      </div>
    </div>

    <div>
      <%= form.label :position, class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= form.number_field :position,
          class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500",
          value: document.position || 0 %>
      <p class="mt-1 text-sm text-gray-500">Lower numbers appear first in listings</p>
    </div>

    <hr class="my-6">

    <h4 class="text-lg font-semibold mb-3">Content</h4>

    <div>
      <%= form.label :title, class: "block text-sm font-medium text-gray-700 mb-1" %>
      <% title_value = begin
           document.persisted? ? document.latest_version.title : nil
         rescue
           nil
         end %>
      <%= form.text_field :title,
          value: title_value,
          class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500",
          placeholder: "Document Title" %>
    </div>

    <div>
      <%= form.label :description, class: "block text-sm font-medium text-gray-700 mb-1" %>
      <% description_value = begin
           document.persisted? ? document.latest_version.description : nil
         rescue
           nil
         end %>
      <%= form.text_area :description,
          value: description_value,
          rows: 3,
          class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500",
          placeholder: "Brief description" %>
    </div>

    <div>
      <%= form.label :body, class: "block text-sm font-medium text-gray-700 mb-1" %>
      <% body_value = begin
           document.persisted? ? document.latest_version.body : nil
         rescue
           nil
         end %>
      <%= form.text_area :body,
          value: body_value,
          rows: 15,
          class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500 font-mono",
          placeholder: "Document body content" %>
    </div>

    <div class="flex justify-end gap-3 pt-4">
      <%= link_to "Cancel",
          document.persisted? ? docs_com_cms_document_path(document) : docs_com_cms_documents_path,
          class: "px-4 py-2 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50" %>
      <%= form.submit document.persisted? ? "Update Document" : "Create Document",
          class: "px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" %>
    </div>
  </div>
<% end %>

<script>
  document.addEventListener('turbo:load', function() {
    const responseModeSelect = document.querySelector('#com_document_response_mode');
    const redirectUrlField = document.querySelector('#redirect-url-field');

    if (responseModeSelect) {
      responseModeSelect.addEventListener('change', function() {
        if (this.value === 'redirect') {
          redirectUrlField.style.display = 'block';
        } else {
          redirectUrlField.style.display = 'none';
        }
      });
    }
  });
</script>

<% content_for :page_title, t("apex.org.preferences.regions.title") %>

<h1><%= t("apex.org.preferences.regions.title") %></h1>

<%= form_with url: apex_org_preference_region_url, method: :patch do |f| %>
  <div class="region-section">
    <h2><%= t("apex.org.preferences.regions.region_section") %></h2>

    <div class="region-selection">
      <%= f.label :region, t("apex.org.preferences.regions.select_region") %>
      <%= f.select :region, options_for_select([
                                                 [t("apex.org.preferences.regions.select_region_selector.USA"), "US"],
                                                 [t("apex.org.preferences.regions.select_region_selector.JAPAN"), "JP"],
                                               ], @current_region), { prompt: t("apex.org.preferences.regions.select_region_prompt") } %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit class: 'px-4 py-2 bg-blue-600 hover:bg-blue-700 text-white font-medium rounded-md transition-colors duration-200 cursor-pointer' %>

  </div>
<% end %>

<div class="mt-4">
  <%= link_to t('apex.org.preferences.back_to_settings'),
              apex_org_preference_path,
              class: 'inline-block px-4 py-2 bg-gray-200 hover:bg-gray-300 text-gray-800 font-medium rounded-md transition-colors duration-200' %>
</div>

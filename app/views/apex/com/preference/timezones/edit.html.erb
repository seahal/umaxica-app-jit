<h1>Timezone Settings</h1>
<%= form_with url: apex_com_preference_timezone_url, method: :patch do |f| %>
  <div class="timezone-selection">
    <%= f.select :timezone, options_for_select([
      ['UTC', 'UTC'],
      ['Asia/Tokyo', 'Asia/Tokyo']
    ], @timezone) %>
    <%= f.label :timezone, "Select Timezone" %>
  </div>
  <div><%= f.submit %></div>
<% end %>

<% scope = local_assigns.fetch(:scope).to_s %>

<h1><%= t("apex.#{scope}.preference.theme.edit.title") %></h1>
<p class="theme-description"><%= t("apex.#{scope}.preference.theme.edit.description") %></p>

<%= form_with url: public_send("apex_#{scope}_preference_theme_path"), method: :patch do %>
  <fieldset class="theme-options">
    <legend><%= t("apex.#{scope}.preference.theme.edit.legend") %></legend>

    <div class="theme-option">
      <%= radio_button_tag :theme, "light", true, id: "theme_light_#{scope}" %>
      <%= label_tag "theme_light_#{scope}", t("apex.#{scope}.preference.theme.edit.options.light") %>
      <p class="hint"><%= t("apex.#{scope}.preference.theme.edit.hints.light") %></p>
    </div>

    <div class="theme-option">
      <%= radio_button_tag :theme, "dark", false, id: "theme_dark_#{scope}" %>
      <%= label_tag "theme_dark_#{scope}", t("apex.#{scope}.preference.theme.edit.options.dark") %>
      <p class="hint"><%= t("apex.#{scope}.preference.theme.edit.hints.dark") %></p>
    </div>
  </fieldset>

  <div class="form-actions">
    <%= submit_tag t("apex.#{scope}.preference.theme.edit.submit") %>
  </div>
<% end %>

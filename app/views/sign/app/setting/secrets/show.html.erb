<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
  <div class="md:grid md:grid-cols-3 md:gap-6">
    <div class="md:col-span-1">
      <div class="px-4 sm:px-0">
        <h3 class="text-lg font-medium leading-6 text-gray-900"><%= t('.title', default: 'Secret Details') %></h3>
        <p class="mt-1 text-sm text-gray-600"><%= t('.description', default: 'View secret details.') %></p>
      </div>
    </div>
    <div class="mt-5 md:col-span-2 md:mt-0">
      <div class="shadow sm:overflow-hidden sm:rounded-md bg-white">
        <div class="px-4 py-5 sm:p-6 space-y-6">
          <div>
            <h3 class="text-lg font-medium leading-6 text-gray-900"><%= @secret.name %></h3>
          </div>
          <dl class="grid grid-cols-1 gap-x-4 gap-y-8 sm:grid-cols-2">
            <div class="sm:col-span-1">
              <dt class="text-sm font-medium text-gray-500"><%= t('activerecord.attributes.user_identity_secret.created_at', default: 'Created At') %></dt>
              <dd class="mt-1 text-sm text-gray-900"><%= l @secret.created_at, format: :long %></dd>
            </div>
            <div class="sm:col-span-1">
              <dt class="text-sm font-medium text-gray-500"><%= t('activerecord.attributes.user_identity_secret.last_used_at', default: 'Last Used At') %></dt>
              <dd class="mt-1 text-sm text-gray-900"><%= @secret.last_used_at ? l(@secret.last_used_at, format: :long) : t('defaults.never', default: 'Never') %></dd>
            </div>
          </dl>
        </div>
        <div class="bg-gray-50 px-4 py-3 text-right sm:px-6">
          <%= link_to t('actions.back', default: 'Back'), sign_app_setting_secrets_path, class: "inline-flex justify-center rounded-md border border-gray-300 bg-white py-2 px-4 text-sm font-medium text-gray-700 shadow-sm hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2 mr-3" %>
          <%= link_to t('actions.edit', default: 'Edit'), edit_sign_app_setting_secret_path(@secret), class: "inline-flex justify-center rounded-md border border-transparent bg-indigo-600 py-2 px-4 text-sm font-medium text-white shadow-sm hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2" %>
        </div>
      </div>
    </div>
  </div>
</div>
<h1 class="font-bold text-4xl"><%= t("sign.app.setting.recovery.new.page_title") %></h1>
<p class="mt-2 text-sm text-slate-600"><%= t("sign.app.setting.recovery.new.description") %></p>

<%= form_with model: @user_recover_code || UserRecoveryCode.new, url: sign_app_setting_recoveries_path do |f| %>

  <% if @user_recover_code&.errors&.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-md mt-3">
      <h2><%= pluralize(@user_recover_code.errors.count, "error") %> prohibited this sample from being saved:</h2>

      <ul class="list-disc ml-6">
        <% @user_recover_code.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= f.checkbox :confirm_create_recovery_code %>
    <%= f.label :confirm_create_recovery_code, t("sign.app.setting.recovery.new.confirm_label") %>
  </div>

  <div><%= f.submit t("sign.app.setting.recovery.new.submit") %></div>
<% end %>

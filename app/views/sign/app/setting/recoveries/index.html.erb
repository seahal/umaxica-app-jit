<h1 class="font-bold text-4xl"><%= t('controller.sign.app.setting.recovery.index.page_title') %></h1>
<p class="mt-2 text-sm text-slate-600"><%= t('sign.app.setting.recovery.index.description') %></p>

<ul class="mt-4 space-y-2">
  <% @user_recovery_codes.each do |urc| %>
    <li>
      <span class="font-mono text-sm text-slate-600"><%= urc.created_at.present? ? l(urc.created_at, format: :short) : "-" %></span>
      <%= link_to t('sign.app.setting.recovery.index.edit_link'), sign_app_setting_recovery_path(urc.id), class: "ml-2 text-indigo-600 hover:text-indigo-900" %>
    </li>
  <% end %>
</ul>

<p class="mt-4"><%= link_to t('sign.app.setting.recovery.index.new_link'), new_sign_app_setting_recovery_path, class: "text-indigo-600 hover:text-indigo-900" %></p>
<p><%= link_to t('controller.sign.app.setting.recovery.index.return_page'), sign_app_setting_path %></p>

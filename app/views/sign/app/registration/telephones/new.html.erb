<div>
  <%= form_with model: @user_telephone, url: sign_app_registration_telephones_path, method: 'post' do |form| %>
    <% if @user_telephone.errors.any? %>
      <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-md mt-3">
        <h2><%= pluralize(@user_telephone.errors.count, "error") %> prohibited this sample from being saved:</h2>

        <ul class="list-disc ml-6">
          <% @user_telephone.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div>
      <%= form.label :number %>
      <%= form.text_field :number %>
    </div>

    <div>
      <%= form.checkbox :confirm_policy %>
      <%= form.label :confirm_policy, '利用規約に同意する' %>
    </div>

    <div>
      <%= form.checkbox :confirm_using_mfa %>
      <%= form.label :confirm_using_mfa, 'MFAの利用を確認する' %>
    </div>

    <%= render "concern/cloudflare_turnstile" %>

    <%= form.submit %>
  <% end %>

  <ul>
    <li><%= link_to t('sign.app.registration.telephone.new.link_to_other_methods'), new_sign_app_registration_path %></li>
    <%# TODO: Implement telephone authentication %>
    <%#= link_to t('sign.app.registration.telephone.new.link_to_sign_in'), new_sign_app_authentication_telephone_path %>
  </ul>
</div>

<div>
  <h1 class="font-bold text-4xl"><%= t('sign.app.registration.email.new.page_title') %></h1>

  <%= form_with model: @user_email, url: sign_app_registration_emails_path, method: 'post', data: { turbo: false } do |form| %>
    <%= hidden_field_tag :rd, params[:rd] if params[:rd].present? %>

    <% if @user_email.errors.any? %>
      <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-md mt-3">
        <h2><%= pluralize(@user_email.errors.count, "error") %> prohibited this sample from being saved:</h2>

        <ul class="list-disc ml-6">
          <% @user_email.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div>
      <%= form.label :address %>
      <%= form.email_field :address %>
    </div>

    <div>
      <%= form.checkbox :confirm_policy %>
      <%= form.label :confirm_policy, '利用規約に同意する' %>
    </div>

    <%= render "concern/cloudflare_turnstile" %>

    <%= form.submit %>
  <% end %>

  <ul>
    <li><%= link_to t('sign.app.registration.email.new.link_to_other_methods'), new_sign_app_registration_path %></li>
    <li><%= link_to t('sign.app.registration.email.new.link_to_sign_in'), new_sign_app_authentication_email_path %></li>
  </ul>
</div>

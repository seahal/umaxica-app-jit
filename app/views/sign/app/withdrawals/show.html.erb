<%# Withdrawal status page used by Sign::App::WithdrawalsController#show %>
<div class="withdrawal-status">
  <h1><%= t("sign.app.withdrawal.show.title", default: "Withdrawal status") %></h1>

    <div class="active-state">
      <p><strong><%= t("sign.app.withdrawal.show.active", default: "Your account is active") %></strong></p>

      <div class="actions">
        <h2><%= t("sign.app.withdrawal.show.withdrawal_actions", default: "Withdrawal Options") %></h2>

        <div class="action-group">
          <h3><%= t("sign.app.withdrawal.show.temporary_withdrawal", default: "Temporary Withdrawal") %></h3>
          <p><%= t("sign.app.withdrawal.show.temporary_notice", default: "Your account will be temporarily withdrawn and can be recovered within the grace period.") %></p>
          <%= button_to t("sign.app.withdrawal.show.withdraw_button", default: "Withdraw Account"),
                        sign_app_withdrawal_path,
                        method: :patch,
                        class: "btn btn-warning",
                        data: { confirm: t("sign.app.withdrawal.show.confirm_withdrawal", default: "Are you sure?") } %>
        </div>

        <div class="action-group">
          <h3><%= t("sign.app.withdrawal.show.permanent_deletion", default: "Permanent Deletion") %></h3>
          <p><%= t("sign.app.withdrawal.show.permanent_notice", default: "Your account and all associated data will be permanently deleted. This action cannot be undone.") %></p>
          <%= button_to t("sign.app.withdrawal.show.delete_button", default: "Permanently Delete Account"),
                        sign_app_withdrawal_path,
                        method: :delete,
                        class: "btn btn-danger",
                        data: { confirm: t("sign.app.withdrawal.show.confirm_deletion", default: "This cannot be undone. Are you sure?") } %>
        </div>
      </div>
    </div>
</div>

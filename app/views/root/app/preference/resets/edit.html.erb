<% content_for :page_title, t("root.app.preference.reset.edit.title") %>

<h1><%= t("root.app.preference.reset.edit.title") %></h1>
<p class="reset-description"><%= t("root.app.preference.reset.edit.description") %></p>
<p class="reset-warning"><%= t("root.app.preference.reset.edit.confirmation") %></p>

<%= form_with url: root_app_preference_reset_path, method: :delete do |f| %>
  <div class="form-check">
    <%= f.check_box :confirm_reset, { required: true, checked: @confirm_reset == "1" }, "1", "0" %>
    <%= f.label :confirm_reset, t("root.app.preference.reset.edit.confirmation_label") %>
  </div>
  <div>
    <%= f.submit t("root.app.preference.reset.edit.submit"), class: "btn btn-primary" %>
  </div>
<% end %>

<div class="form-actions">
  <%= link_to t("root.app.preferences.back_to_settings"), root_app_preference_path, class: "btn btn-secondary" %>
</div>

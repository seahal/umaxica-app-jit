# Rails Configuration
RAILS_ENV=development
RAILS_MAX_THREADS=5

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/umaxica_development

# Redis Configuration
REDIS_URL=redis://localhost:6379/0
REDIS_SESSION_URL=redis://localhost:6379/1

# Kafka Configuration
KAFKA_BROKERS=localhost:9092
KAFKA_SECURITY_PROTOCOL=PLAINTEXT
KAFKA_GROUP_ID=umaxica-app
KAFKA_CLIENT_ID=umaxica-app

# For production with SASL/SSL
# KAFKA_SECURITY_PROTOCOL=SASL_SSL
# KAFKA_SASL_MECHANISM=PLAIN
# KAFKA_SASL_USERNAME=your_username
# KAFKA_SASL_PASSWORD=your_password

# Domain URLs
WWW_CORPORATE_URL=https://com.example.com
WWW_SERVICE_URL=https://app.example.com  
WWW_STAFF_URL=https://org.example.com
API_CORPORATE_URL=https://api-com.example.com
API_SERVICE_URL=https://api-app.example.com
API_STAFF_URL=https://api-org.example.com

# Storage Configuration
GOOGLE_CLOUD_PROJECT=your-project-id
GOOGLE_CLOUD_KEYFILE=path/to/keyfile.json

# External Services
AWS_ACCESS_KEY_ID=your_access_key
AWS_SECRET_ACCESS_KEY=your_secret_key
AWS_REGION=us-east-1

# Monitoring
OPENTELEMETRY_ENDPOINT=http://localhost:4318

# Security
SECRET_KEY_BASE=your_secret_key_base
RACK_ATTACK_API_KEY=your_api_key_for_rack_attack